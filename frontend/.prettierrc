{
    "trailingComma": "none",
    "tabWidth": 4,
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "endOfLine": "auto",
    "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
    "importOrder": [
        "^react(/.*)?$",
        "^next(-.*|/.*)?$",
        "<THIRD_PARTY_MODULES>",
        "^@/components/(.*)$",
        "^@/integrations/(.*)$",
        "^@/services/(.*)$",
        "^@/lib/(.*)$",
        "^@/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
